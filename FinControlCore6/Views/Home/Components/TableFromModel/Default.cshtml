@using FinControlCore6.Models.DatabaseModels
@using FinControlCore6.Utils
@using FinControlCore6.ViewModels
@model IEnumerable<string>

@{
	void PrintColumns(string className)
	{
		<tr class=@className>
			@foreach (var propertyName in Model)
			{
				<th>@propertyName</th>
			}
		</tr>
	}
}
<table class="display" id=@ViewBag.TagId>
	<thead>
		@{
			<tr class="search-row">
				@for (int i =0;i<Model.Count();i++)
				{
					<th><input id=@("input" +i) type="text" placeholder="@("Search " + Model.ElementAt(i))" /></th>
				}
			</tr>
			PrintColumns("column-names-row");

		}
	</thead>
